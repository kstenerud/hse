<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<session-config>
		<session-timeout>15</session-timeout>
	</session-config>

	<display-name>HSE Base Application</display-name>
	<description>Hibernate, Struts, Echo2 Base Application</description>


	<!-- Uncomment this to use a JNDI data source
    <resource-ref>
        <description>Main DB Connection</description>
        <res-ref-name>jdbc/mainDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
	-->


	<!-- Hibernate support -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<filter>
		<filter-name>hibernateFilter</filter-name>
		<filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter </filter-class>
	</filter>
	<filter-mapping>
		<filter-name>hibernateFilter</filter-name>
		<url-pattern>/app</url-pattern>
	</filter-mapping>


	<!-- Main Application servlet -->
	<servlet>
		<servlet-name>MainApplicationServlet</servlet-name>
		<servlet-class>org.stenerud.hse.ui.servlet.Echo2Servlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>MainApplicationServlet</servlet-name>
		<url-pattern>/app</url-pattern>
	</servlet-mapping>


	<!-- End Session servlet -->
	<servlet>
		<servlet-name>EndSessionServlet</servlet-name>
		<servlet-class>org.stenerud.hse.ui.servlet.EndSessionServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>EndSessionServlet</servlet-name>
		<url-pattern>/endSession</url-pattern>
	</servlet-mapping>
</web-app>
